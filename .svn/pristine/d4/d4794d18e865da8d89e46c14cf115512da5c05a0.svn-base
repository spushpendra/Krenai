.urlive-deletebuttion {
    z-index:999;
    cursor:pointer;
}
.urlive-link {
	color:inherit;
	text-decoration:none;
	display:block;
	width:auto;
	overflow:auto;
	position:relative;
	overflow:hidden;
	margin-bottom: 3px;
	background:#EFEFEF;
	font-size:16px;
	line-height:normal;
	border: 1px solid;
	float:left;
	width: 98%;
}
.urlive-del-wrapper {
    float:left;
    font-size: 27px;
}
.urlive-link:hover {
	box-shadow:0 0 4px rgba(10,10,10,0.6);
}

.urlive-link * {
	display:block;
	float: left;
}

.urlive-image {
	width:100%;
	display:block;
}

.urlive-title {
	font-size: 16px;
	font-weight:bold;
}

.urlive-description {
	font-size: 16px;
}

.urlive-url {
	font-size:0.9em;
	overflow:hidden;
	text-overflow:ellipsis;
}

.urlive-sitename, .urlive-type {
	display:none;
}

.urlive-img-wrapper {
	float:left;
	margin-right:10px;
	width: 150px;
}

.urlive-text-wrapper {
	overflow:auto;
	padding:10px;
	float: left;
	width: 80%;
}
.urlive-link {
    background:none;
    border:0;
}
    .urlive-link:hover {
        color:#000;
    }

/* SMALL IMAGE STYLES*/
.urlive-img-small .urlive-img-wrapper {
	width: 100px;
	max-width:100px;
}

/* LARGE IMAGE STYLES */
.urlive-img-large .urlive-img-wrapper {
	width:100%;
	max-width:none;
	float:none;
}
